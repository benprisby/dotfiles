" Basic behavior
set nocompatible
set nobackup
set autoread

" Remember cursor position
autocmd BufReadPost * if line("'\"") > 1 && line("'\"") <= line("$") | exe "normal! g`\"" | endif

" Syntax and file types
syntax on
filetype plugin indent on

" Indentation
set tabstop=4
set shiftwidth=4
set expandtab
set autoindent

" Editing
set backspace=indent,eol,start

" Search improvements
set hlsearch
set incsearch
set ignorecase
set smartcase

" Better file handling
set hidden
set confirm

" Display
set number
set showcmd
set ruler
set wildmenu
set colorcolumn=120
highlight colorcolumn ctermbg=234 guibg=#1c1c1c

" Performance
set lazyredraw

" Disable bells
set noerrorbells
set visualbell
set t_vb=
