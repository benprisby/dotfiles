# Bash-like behavior
setopt globdots
setopt noautomenu
setopt nonomatch
setopt rm_star_silent

# Directory navigation
setopt auto_cd
setopt auto_pushd
setopt pushd_ignore_dups

# History configuration
setopt appendhistory
setopt sharehistory
setopt hist_ignore_dups
setopt hist_ignore_space

# Enhanced tab completion
autoload -Uz compinit && compinit

# File listing
alias ll="ls -lahG"
alias la="ls -la"

# System utilities
alias grep="grep --color=auto"
alias ..="cd .."
alias ...="cd ../.."
alias df="df -h"
alias du="du -h"
alias mkdir="mkdir -p"

# Architecture emulation shortcut
alias ax="arch -x86_64"

# Combined Homebrew update
alias bu="brew update --verbose && brew upgrade --verbose && brew upgrade --verbose --cask && brew cleanup"

# Utilities
alias uuid="uuidgen | tr '[:upper:]' '[:lower:]'"
